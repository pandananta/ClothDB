%p#notice= notice


#dress-attibutes
  %img.dress-image{:src => @dress.image}/
  .info
    %p
      %b
        = @dress.title
    %p
      by
      = @dress.brand 
    %p
      %b Fabric:
      = @dress.fabric    
    %p
      %b Sold at:
      = @dress.source
    
    /* convert price value to visual rating (e.g. 2 = $$) */
    - foo = ""
    - value = @dress.price
    - (0...@dress.price).each do |i|
      -foo = foo + "$"
    %p
      %b Price rating:
      = foo
            
    %p
      = link_to "Buy", @dress.url, :target => "_blank", :class=> "btn btn-success" 

/*https://github.com/jackmoore/zoom*/
:javascript
  $('img.dress-image')
  .wrap('<span style="display:inline-block"></span>')
  .css('display', 'block')
  .parent()
  .zoom();