#dresses
  #filter_panel
    %ul#filters
      %li
        %a{"data-filter" => "*", :href => "#"} show all
      %li
        %a{"data-filter" => ".silk", :href => "#"} silk
      %li
        %a{"data-filter" => ".polyester", :href => "#"} polyester
      %li
        %a{"data-filter" => ".cashmere", :href => "#"} cashmere
      %li
        %a{"data-filter" => ".cotton", :href => "#"} cotton


  .pagination
    = paginate @dresses 
  #dress_container
    - @dresses.each do |dress|
      = render "dress", dress:dress
